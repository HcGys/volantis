    right -5px
    height 1px
    width 1px
    opacity 0
  20% 
    height 3px
    width 3px
    right 0px
    opacity 1
  30% 
    right -5px
    opacity 1
    height 3px
    width 3px
  70% 
    height 3px
    width 3px
  100% 
    right -15px
