    @media screen and (max-width: 300px)
      display: none
    content: attr(alt)
    position: absolute
    left: 0
    bottom: 0
    width: 100%
    line-height: 2
    background-color: rgba(0,0,0,.5)
    color: white
    font-size: 12px
    text-align: center
    white-space: nowrap
