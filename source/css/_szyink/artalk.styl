#artalk_container
  font-family $fontfamily
  .atk-main-editor
    background-color var(--color-site-body)
    .atk-textarea-wrap
      background-color var(--color-site-body)
      border-top 1px solid var(--at-color-border)
  code
    *
      font-family $fontfamily-code
    color var(--color-inlinecode)
    font-family $fontfamily-code
    &:before
      margin-top -5px
