#artalk_container
  i.fa-cog
    margin 0 auto
    display block
  .atk-main-editor
    border none
    background var(--color-site-body) !important
    .atk-textarea-wrap textarea
      background var(--color-site-body) !important
      &:focus
        border-top 1px solid var(--at-color-border)
    .atk-bottom
      .atk-plug-btn i
        display none
  .atk-list
    .atk-list-header
      border-bottom none
    .atk-list-body
      .atk-comment-wrap
        border-left none 
        border-bottom none
        .atk-avatar
          width 48px
          height 48px
          img
            border-radius 8px
            &.error:before
              width 48px !important
              height 48px !important
              border-radius 8px
            &.error:after
              display none
        .atk-main
          &:hover
            .atk-footer
              display block
            .atk-comment-children
              .atk-footer
                display none
          .atk-header
            .atk-ua-wrap
              padding 4px 0
          .atk-body
            .atk-content
              margin-top 0
              img[src*="inkss/common/emoji"]
                width 3em
                height auto
                vertical-align middle
              code
                color var(--color-inlinecode)
                background var(--color-codeblock)
                border-radius 2px
                word-break break-all
                font-family $fontfamily-code
                font-size $fontsize-code
          .atk-footer
            display none
            position absolute
            margin 0
            top 0
            right 10px
          .atk-comment-children
            .atk-comment-wrap
              &:hover
                .atk-footer
                  display block
                  right: 0
              .atk-comment
                padding-right 0
                padding-bottom 0    
                padding-left 0    
    .atk-list-footer
      display none
