<script>
  volantis.message = (title, message, type, autoClose, time = 3000) => {
    if (typeof $.message == "undefined") {
      volantis.css('<%- theme.cdn.addCSS("message") %>')
      volantis.js('<%- theme.cdn.addJS("message") %>', () => {
        start(title, message, type, autoClose, time);
      });
    } else {
      start(title, message, type, autoClose, time);
    }
    function start(title, message, type, autoClose, time) {
      $.message({
        title: title,
        message: message,
        type: type,
        autoClose: autoClose,
        time: time,
      });
    }
  };
</script>
