<script>
  function pjax_ArticleBkg() {
    const bkg = document.querySelector('.cus-article-bkg');
    const global_bkg = document.getElementById('BKG');
    if(bkg) {
      global_bkg.style.display = 'none';
    } else {
      global_bkg.style.display = 'block';
    }
  }

  document.addEventListener("DOMContentLoaded", function () {
    pjax_ArticleBkg();
  });

  volantis.pjax.send(pjax_ArticleBkg);
  volantis.pjax.push(pjax_ArticleBkg);
</script>
